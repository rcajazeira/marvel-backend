
{
  "version": 2,
  "builds": [
    {
      "type": "nodejs",
      "command": "npm install && npm run build",
      "entrypoint": "server.js"
    }
  ],
  "routes": [
    {
      "src": "/api/hero/(.*)",
      "dest": "backend"
    },
    {
      "src": "/api/comics/(.*)",
      "dest": "backend"
    },
    {
      "src": "/api/stories/(.*)",
      "dest": "backend"
    }
  ]
}
